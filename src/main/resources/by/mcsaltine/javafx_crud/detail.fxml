<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" style="-fx-padding: 30;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="by.mcsaltine.javafx_crud.DetailController">

    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <Label text="Редактирование пользователя" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="180" prefWidth="180"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="300"/>
        </columnConstraints>

        <!-- Все поля как были -->
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="lblId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Имя:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="tfName" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tfEmail" prefWidth="300" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Возраст:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="tfAge" prefWidth="100" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Роль:" fx:id="lblRole" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbRole" prefWidth="200" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Новый пароль (оставьте пустым, чтобы не менять):"
               fx:id="lblPassword" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <PasswordField fx:id="tfNewPassword" prefWidth="300" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Назначенные курсы:" fx:id="lblUserCourses" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ListView fx:id="lvUserCourses" prefHeight="160" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Доступные курсы:" fx:id="lblAvailableCourses" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <ListView fx:id="lvAvailableCourses" prefHeight="160" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Кнопки записи/отписки — ВНЕ GridPane -->
    <HBox spacing="30" alignment="CENTER" style="-fx-padding: 15 0 15 0;">
        <Button text="Записать на курс ←" onAction="#enrollCourse" style="-fx-font-size: 14px;"/>
        <Button text="→ Отписать от курса" onAction="#unenrollCourse" style="-fx-font-size: 14px;"/>
    </HBox>

    <!-- Кнопки Сохранить / Отмена -->
    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Button fx:id="btnSave" text="Сохранить" onAction="#saveUser"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
        <Button text="Отмена" onAction="#closeWindow"/>
    </HBox>


</VBox>